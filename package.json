{
  "name": "svgomg",
  "description": "Easy & visual compression of SVG images.",
  "private": true,
  "version": "1.16.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakearchibald/svgomg.git"
  },
  "keywords": [],
  "author": "Jake Archibald",
  "bugs": {
    "url": "https://github.com/jakearchibald/svgomg/issues"
  },
  "homepage": "https://jakearchibald.github.io/svgomg/",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.7",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@size-limit/file": "^8.2.6",
    "clean-css": "^5.3.3",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-nunjucks": "^5.1.0",
    "gulp-sass": "^5.1.0",
    "nanoevents": "^7.0.1",
    "pako": "^2.1.0",
    "prismjs": "^1.29.0",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.85.1",
    "sirv-cli": "^2.0.2",
    "size-limit": "^8.2.6",
    "stylelint": "^14.16.1",
    "stylelint-config-twbs-bootstrap": "^6.0.0",
    "svgo": "^4.0.0-rc.1",
    "vinyl-map": "^1.0.2",
    "xo": "^0.52.4"
  },
  "scripts": {
    "build": "gulp clean-build",
    "start": "sirv build --port 8080 --dev --no-clear",
    "dev": "gulp dev",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint src/css/ --rd --risd",
    "lint:js": "xo",
    "fix": "xo --fix",
    "test": "npm run lint && npm run build",
    "size": "size-limit"
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "capitalized-comments": "off",
      "no-multi-assign": "off",
      "no-negated-condition": "off",
      "no-shadow": "error",
      "prefer-template": "error",
      "spaced-comment": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/no-unused-properties": "error",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  }
}
